<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SearchingPageActivity">
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >
            <View
                android:id="@+id/navbar_top"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="70dp"/>


            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@id/navbar_top"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="170dp"
                app:layout_constraintEnd_toEndOf="parent" />
        </FrameLayout>


            <LinearLayout
                android:id="@+id/personalInformationButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@id/frame_layout"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/text2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B21DCCN000"
                    android:textSize="15dp"
                    android:layout_marginLeft="120dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@id/changePasswordButton"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintTop_toBottomOf="@id/personalInformationButton">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/text2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:hint="Nguyễn Văn A"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/textView"
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        <LinearLayout
            android:id="@id/settingButton"
            android:layout_width="300dp"
            android:layout_height="700dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toBottomOf="@id/changePasswordButton">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:hint="Nữ"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/textView"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/text2"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:hint="0123456789"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/textView"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại khác"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/textView"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/text2"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:hint="ANV.B21CN000@stu.ptit.edu.vn"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/textView"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCCD/CMND"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/text2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:hint="0012345678"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/textView"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/text2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"/>

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:hint="01/01/2003"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/textView"
                    android:layout_marginLeft="80dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ đang ở"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/text2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:background="@drawable/rounded_background"
                android:backgroundTint="@color/textView"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>





        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
