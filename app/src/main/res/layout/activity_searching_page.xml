<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchingPageActivity">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <View
                android:id="@+id/navbar_top"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/personalInformationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/frame_layout"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duyệt theo"
                android:textColor="@color/text2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="280dp"/>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_background4"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Bộ sưu tập"
                    android:textSize="14dp"
                    android:textColor="@color/text2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background3"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Năm xuất bản"
                    android:textSize="14dp"
                    android:textColor="@color/text2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background3"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Tác giả"
                    android:textSize="14dp"
                    android:textColor="@color/text2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="90dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_background4"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Nhan đề"
                    android:textSize="14dp"
                    android:textColor="@color/text2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background3"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Chủ đề"
                    android:textSize="14dp"
                    android:textColor="@color/text2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background3"/>

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:text="Người hướng dẫn"
                    android:textSize="14dp"
                    android:textColor="@color/text2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background3"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/changePasswordButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personalInformationButton"
            android:background="@drawable/rounded_background5"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic8"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:padding="10dp"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingButton"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/changePasswordButton">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài giảng khoa ATTT"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/technicalAssistButton"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/settingButton">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài giảng khoa Viễn Thông"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="140dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutButton"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/technicalAssistButton">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khoa cơ bản"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="235dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function6"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/logoutButton">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="khoa Kế Toán"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="225dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function7"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/function6">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoa Đa Phương Tiện"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="170dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function8"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/function7">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoa Điện Tử"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="225dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function9"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/function8">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngành Công Nghệ Tài Chính"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="127dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/function10"
            android:layout_width="370dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_background3"
            app:layout_constraintTop_toBottomOf="@id/function9">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngành QTKD - TMĐT"
                android:textSize="15dp"
                android:textColor="@color/text2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/greater_than_icon"
                android:layout_gravity="center"
                android:layout_marginLeft="175dp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/function11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:menu="@menu/menu_bottom_nav"
                app:itemBackground="@color/nav"
                app:itemIconTint="@color/navText"/>

        </FrameLayout>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/function11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ptit_ic" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>