<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TechnicalFeedbackActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <View
            android:id="@+id/navbar_top"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phản hồi kỹ thuật"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

    </FrameLayout>

    <LinearLayout
        android:id="@id/function1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_layout"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin phản hồi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="120dp"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="300dp"
                android:layout_height="200dp"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Nhập nội dung (500 kí tự)*"
                android:textSize="15dp"
                android:background="@null"/>

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@id/function2"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/function1"
        android:layout_marginTop="20dp"
       android:layout_width="300dp"
       android:layout_height="80dp"
       android:background="@drawable/rounded_background">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tệp đính kèm"
           android:textStyle="bold"
           android:textSize="15dp"
           android:padding="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải lên"
            android:textSize="10dp"
            android:textStyle="italic"
            android:layout_marginLeft="250dp" />

        <TextView
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:padding="4dp"
            android:text="Chỉ nhận tối đa một tệp đính kèm(định dạng .jpg, .png, .jpeg). Tổng dung lượng tất cả các tệp không vượt quá 20MB)"
            android:textColor="#607DF4"
            android:textSize="8dp"/>

   </FrameLayout>

    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/function2"
        android:id="@id/function3"
        android:layout_width="120dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Gửi phản hồi"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_height="35dp"/>

<!--    nav bar bottom-->
    <FrameLayout
        android:id="@+id/function4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/menu_bottom_nav"
            app:itemBackground="@color/nav"
            app:itemIconTint="@color/navText"/>

    </FrameLayout>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/function4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ptit_ic" />





</androidx.constraintlayout.widget.ConstraintLayout>